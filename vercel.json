{
  "version": 2,
  "routes": [
    {
      "src": "^/((?!api/).*)/$",
      "dest": "/$1.html"
    },
    {
      "src": "^/((?!api/).*)$",
      "dest": "/$1.html"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/.*",
      "dest": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)\\.(js|css|png|jpg|jpeg|svg|webp)",
      "headers": [
        {
          "key": "cache-control",
          "value": "public, max-age=0, s-maxage=31536000, must-revalidate"
        }
      ]
    }
  ]
}