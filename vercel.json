{
  "version": 2,
  "cleanUrls": true,
  "trailingSlash": false,
  "rewrites": [
    { "source": "/(.*)", "destination": "/$1.html" },
    { "source": "/.*", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/(.*)\\.(js|css|png|jpg|jpeg|svg|webp)",
      "headers": [
        {
          "key": "cache-control",
          "value": "public, max-age=0, s-maxage=31536000, must-revalidate"
        }
      ]
    }
  ]
}
